<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Web Service Status</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      text-align: center;
      padding: 2rem;
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 400px;
      width: 100%;
    }

    h1 {
      font-size: 24px;
      color: #333;
      margin-bottom: 20px;
    }

    .status {
      font-size: 18px;
      color: #555;
      margin-bottom: 10px;
    }

    .loading-spinner {
      border: 8px solid #f3f3f3;
      border-top: 8px solid #3498db;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      animation: spin 1s linear infinite;
      margin: 20px auto;
    }

    .hidden {
      display: none;
    }

    .response-data {
      font-size: 16px;
      color: #444;
      margin-top: 15px;
      padding: 10px;
      background-color: #e0f7fa;
      border-radius: 8px;
      text-align: left;
    }

    .error-message {
      color: #e74c3c;
      font-size: 16px;
      margin-top: 15px;
    }

    .key {
      font-weight: bold;
    }

    .value {
      margin-left: 5px;
      color: #555;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    footer {
      margin-top: 20px;
      font-size: 12px;
      color: #aaa;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Estado Servicio Web</h1>
    <div class="status">Verificando estado del servicio Auth...</div>
    <div id="spinner" class="loading-spinner"></div>
    <div id="auth-data" class="response-data hidden"></div>
    <div id="error-message" class="error-message hidden"></div>
    <footer>Servicio Auth Monitor</footer>
  </div>

  <script>
    // Formatear el JSON de manera legible
    function formatJSON(data) {
      const formattedData = Object.entries(data).map(([key, value]) => {
        return `<div><span class="key">${key}:</span> <span class="value">${value}</span></div>`;
      }).join('');
      return formattedData;
    }

    async function fetchAuthData() {
      try {
        const response = await fetch('/check-auth');
        const data = await response.json();

        const spinner = document.getElementById('spinner');
        const authDataDiv = document.getElementById('auth-data');
        const errorMessageDiv = document.getElementById('error-message');

        if (data.loading) {
          spinner.classList.remove('hidden');
          authDataDiv.classList.add('hidden');
          errorMessageDiv.classList.add('hidden');
        } else {
          spinner.classList.add('hidden');
          authDataDiv.classList.remove('hidden');
          errorMessageDiv.classList.add('hidden');
          authDataDiv.innerHTML = formatJSON(data.authData); // Usar la funci√≥n para formatear el JSON
        }
      } catch (error) {
        const spinner = document.getElementById('spinner');
        const errorMessageDiv = document.getElementById('error-message');
        
        spinner.classList.add('hidden');
        errorMessageDiv.classList.remove('hidden');
        errorMessageDiv.textContent = 'Error fetching auth data. The auth service might be down.';
      }
    }

    setInterval(fetchAuthData, 3000); // Verifica cada 3 segundos
  </script>
</body>
</html>
